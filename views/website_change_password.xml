<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="change_password_link" name="Link to change password on portal" inherit_id="portal.user_dropdown">
        <xpath expr="//*[@id='o_logout']" position="before">
            <a href="/change/password" role="menuitem" class="dropdown-item">Change password</a>
        </xpath>
    </template>

    <template id="change_password" name="Website change password">
        <t t-call="portal.frontend_layout">
            <t t-set="additional_title">Change Password</t>
            <div id="wrap">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-8 col-md-offset-2 col-sm-12 mt-5">
                            <h1 class="page-header mb-5">Change Password</h1>
                            <form id="change_password_form" method="post" 
                                role="form" action="/web/session/change_password">
                                <div class="form-group">
                                    <label class="control-label">Current Password</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control pwd" id="old_pwd"
                                            name="old_pwd" tabindex="1"/>
                                        <div class="input-group-append">
                                            <button class="btn btn-outline-secondary reveal" type="button"
                                                data-target="old_pwd" tabindex="-1"><i class="fa fa-eye"></i></button>
                                        </div>
                                    </div>
                                </div>
                                <hr/>
                                <div class="form-group">
                                    <label class="control-label">New Password</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control pwd" id="new_password"
                                            name="new_password" tabindex="2"/>
                                        <div class="input-group-append">
                                            <button class="btn btn-outline-secondary reveal" type="button"
                                                data-target="new_password" tabindex="-1"><i class="fa fa-eye"></i></button>
                                        </div> 
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Confirm New Password</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control pwd" id="confirm_pwd"
                                            name="confirm_pwd" tabindex="3"/>
                                        <div class="input-group-append">
                                            <button class="btn btn-outline-secondary reveal" type="button"
                                                data-target="confirm_pwd" tabindex="-1"><i class="fa fa-eye"></i></button>
                                        </div>
                                    </div>
                                </div>
                                <div id="password_error" class="alert alert-danger d-none"></div>
                                <div class="clearfix"/>
                                <div class="mt32">
                                    <button id="change_password_submit" type="button" class="btn btn-primary pull-right">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <script type="text/javascript" src="/website_change_password/static/src/js/change_password.js?v=001"/>
            </div>
        </t>
    </template>
</odoo>
